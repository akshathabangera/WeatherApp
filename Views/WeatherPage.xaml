<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherApp.Views.WeatherPage"
             Title="WeatherPage">
    <VerticalStackLayout Padding="20" Spacing="10">
        <Entry x:Name="CityEntry" Placeholder="Enter City Name" Text="Sydney"/>
        <Button Text="Get Weather" Clicked="OnGetWeatherClicked"/>
        <Label x:Name="CityLabel" FontSize="20" FontAttributes="Bold"/>
        <Label x:Name="TemperatureLabel" FontSize="18"/>
        <Label x:Name="ConditionLabel" FontSize="18"/>
    </VerticalStackLayout>
</ContentPage>