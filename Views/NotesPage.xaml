<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherApp.Views.NotesPage"
             Title="Notes">
    <VerticalStackLayout Padding="10" Spacing="10">

        <!-- Form to add note -->
        <Entry Placeholder="Title" Text="{Binding NewNote.Title}" />
        <Entry Placeholder="Description" Text="{Binding NewNote.Description}" />
        <Button Text="Add Note" Command="{Binding AddNoteCommand}" />

        <!-- Notes list -->
        <CollectionView ItemsSource="{Binding Notes}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="LightGray" Padding="10" Margin="5">
                        <VerticalStackLayout>
                            <Label Text="{Binding Title}" FontAttributes="Bold" FontSize="18"/>
                            <Label Text="{Binding Description}" FontSize="14" TextColor="Gray"/>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>